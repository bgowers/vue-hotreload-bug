{
    "compilerOptions": {
        "lib": ["dom", "es5", "es2015"],
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "declarations/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
